{
  "description": "Ubuntu Server base image",
  "min_packer_version": "1.2.1",
  "builders": [
    {
      "type": "vmware-iso",
      "name": "ubuntu-1604-server-base-{{user `version`}}",
      "vm_name": "ubuntu-1604-server-base-{{user `version`}}",
      "guest_os_type": "ubuntu-64",
      "tools_upload_flavor": "linux",
      "disk_size": 20480,
      "disk_type_id": "thin",

      "iso_url":
        "http://releases.ubuntu.com/16.04.4/ubuntu-16.04.4-server-amd64.iso",
      "iso_checksum":
        "0a03608988cfd2e50567990dc8be96fb3c501e198e2e6efcb846d89efc7b89f2",
      "iso_checksum_type": "sha256",

      "communicator": "ssh",
      "ssh_username": "ubuntu",
      "ssh_password": "ubuntu",
      "ssh_timeout": "15m",
      "remote_type": "esx5",
      "remote_host": "{{user `esxi_host`}}",
      "remote_datastore": "{{user `esxi_datastore`}}",
      "remote_username": "{{user `esxi_user`}}",
      "remote_private_key_file": "{{user `private_ssh_key_file`}}",
      "format": "vmx",

      "headless": false,
      "boot_wait": "5s",
      "vnc_port_min": "5988",
      "vnc_port_max": "5989",
      "vnc_bind_address": "0.0.0.0",
      "vnc_disable_password": true,
      "floppy_files": ["./preseed.cfg"],
      "vmx_data": {
        "ethernet0.networkName": "{{user `esxi_network`}}"
      },
      "boot_command": [
        "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "/install/vmlinuz noapic ",
        "preseed/file=/floppy/preseed.cfg ",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
        "hostname={{ .Name }} ",
        "fb=false debconf/frontend=noninteractive ",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
        "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
        "grub-installer/bootdev=/dev/sda ",
        "initrd=/install/initrd.gz -- <enter>"
      ],
      "shutdown_command":
        "echo 'shutdown -P now' > shutdown.sh; echo 'ubuntu' | sudo -S sh 'shutdown.sh'",
      "skip_compaction": false
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command":
        "{{ .Vars }} echo 'ubuntu' | sudo -ES bash '{{.Path}}'",
      "scripts": ["base.sh", "vmware.sh", "custom.sh", "cleanup.sh"]
    }
  ],
  "post-processors": [
    {
      "type": "vsphere",
      "insecure": true,
      "host": "{{user `vcenter_host`}}",
      "datacenter": "{{user `vcenter_datacenter`}}",
      "cluster": "{{user `vcenter_cluster`}}",
      "datastore": "{{user `esxi_datastore`}}",
      "username": "{{user `vcenter_user`}}",
      "password": "{{user `vcenter_password`}}",
      "vm_name": "ubuntu-{{user `version`}}",
      "overwrite": true
    },
    {
      "type": "vsphere-template",
      "host": "{{user `vcenter_host`}}",
      "username": "{{user `vcenter_user`}}",
      "password": "{{user `vcenter_password`}}",
      "insecure": true
    }
  ]
}
